<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_nuova_operazione"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.durante.fabrizio.myaccountant.NuovaOperazione">

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="numberDecimal"
        android:ems="10"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:id="@+id/et_Imp"
        android:hint="Importo"
        android:textColor="?android:attr/textColorPrimaryDisableOnly"
        android:textAlignment="center"
        android:textSize="24sp"
        android:layout_marginBottom="5dp" />

    <Spinner
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/et_Imp"
        android:layout_centerHorizontal="true"
        android:id="@+id/spinner_Conti"
        android:textAlignment="center"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="5dp"
        android:paddingTop="20dp" />

    <Switch
        android:text="Spesa"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/switch_Tipo"
        android:layout_below="@+id/spinner_Conti"
        android:layout_alignParentStart="true"
        android:textColor="@android:color/black"
        android:textSize="24sp"
        android:textAlignment="center"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="5dp"
        android:paddingTop="20dp" />

    <TextView
        android:hint="Seleziona una data"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/switch_Tipo"
        android:layout_alignParentStart="true"
        android:id="@+id/tv_Data"
        android:textAlignment="center"
        android:textColor="@android:color/black"
        android:textSize="24sp"
        android:layout_marginTop="5dp"
        android:paddingTop="20dp"
        android:layout_alignEnd="@+id/et_Luogo" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:textAlignment="center"
        android:layout_below="@+id/btn_Data"
        android:layout_alignParentStart="true"
        android:id="@+id/et_Luogo"
        android:hint="Luogo pagamento"
        android:textColor="@android:color/black"
        android:textSize="24sp"
        android:layout_marginTop="5dp"
        android:layout_toStartOf="@+id/btn_Mappa"
        android:paddingTop="20dp" />

    <Button
        android:text="Mappa"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/et_Luogo"
        android:layout_alignStart="@+id/btn_Data"
        android:id="@+id/btn_Mappa"
        android:textAlignment="center"
        android:textColor="@android:color/black"
        android:textSize="18sp" />

    <Button
        android:text="Memorizza"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/et_Luogo"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="57dp"
        android:id="@+id/btn_MemPag"
        android:textColor="@android:color/black"
        android:textSize="18sp" />

    <Button
        android:text="Scegli"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btn_Data"
        android:textAlignment="center"
        android:textColor="@android:color/black"
        android:textSize="18sp"
        android:layout_alignTop="@+id/tv_Data"
        android:layout_alignParentEnd="true" />

</RelativeLayout>
