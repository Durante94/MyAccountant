<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_mappa_movimento"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.durante.fabrizio.myaccountant.MappaMovimento">

    <TextView
        android:text="Data:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:id="@+id/label_data"
        android:textColor="@android:color/black"
        android:textSize="24sp" />

    <TextView
        android:text="Conto:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:id="@+id/label_conto"
        android:textColor="@android:color/black"
        android:textSize="24sp"
        android:layout_below="@+id/label_data"
        android:layout_alignParentStart="true" />

    <TextView
        android:text="Importo:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="22dp"
        android:id="@+id/label_Importo"
        android:textColor="@android:color/black"
        android:textSize="24sp"
        android:layout_below="@+id/label_conto"
        android:layout_alignParentStart="true" />

    <TextView
        android:text="22/10/7777"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv_data_movimento"
        android:textColor="@android:color/black"
        android:textSize="24sp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:text="Bau"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv_conto_movimento"
        android:textColor="@android:color/black"
        android:textSize="24sp"
        android:layout_above="@+id/label_Importo"
        android:layout_alignTop="@+id/label_conto"
        android:layout_alignStart="@+id/tv_importo_movimento" />

    <TextView
        android:text="0000000â‚¬"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv_importo_movimento"
        android:textColor="@android:color/black"
        android:textSize="24sp"
        android:layout_alignBaseline="@+id/label_Importo"
        android:layout_alignBottom="@+id/label_Importo"
        android:layout_alignStart="@+id/tv_data_movimento" />

    <TextView
        android:text="Tipo:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/label_Importo"
        android:layout_alignParentStart="true"
        android:layout_marginTop="20dp"
        android:id="@+id/label_tipo"
        android:textSize="24sp"
        android:textColor="@android:color/black" />

    <TextView
        android:text="Entrata"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/label_tipo"
        android:layout_alignStart="@+id/tv_importo_movimento"
        android:id="@+id/tv_tipo_movimento"
        android:textColor="@android:color/black"
        android:textSize="24sp" />

    <fragment
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_below="@+id/label_tipo"
        android:layout_alignParentStart="true"
        android:layout_marginTop="20dp"
        android:id="@+id/Mappa" />


</RelativeLayout>
